{
    "name": "extcode/cart-mpay24",
    "type": "typo3-cms-extension",
    "description": "Shopping Cart(s) for TYPO3 - mPAY24 Payment Provider",
    "homepage": "https://cart.extco.de",
    "license": [
        "GPL-2.0+"
    ],
    "keywords": [
        "TYPO3 CMS",
        "Shopping Cart",
        "mpay24",
        "cart"
    ],
    "authors": [
        {
            "name": "Daniel Lorenz",
            "email": "ext.cart@extco.de",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/extcode/cart_mpay24/issues"
    },
    "require": {
        "php": ">=5.6.0",
        "php-mcrypt": ">=5.6.0",
        "typo3/cms-core": "^7.6 || ^8.7",
        "extcode/cart": "^4.0",
        "mpay24/mpay24-php": "^4.1"
    },
    "require-dev": {
        "nimut/testing-framework": "^1.0",
        "phpunit/phpunit": "~4.8.0",
        "friendsofphp/php-cs-fixer": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Extcode\\CartMpay24\\": "Classes"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Extcode\\CartMpay24\\Tests\\": "Tests"
        }
    },
    "replace": {
        "cart_mpay24": "self.version"
    },
    "config": {
        "vendor-dir": ".Build/vendor",
        "bin-dir": ".Build/bin"
    },
    "scripts": {
        "post-autoload-dump": [
            "mkdir -p .Build/Web/typo3conf/ext/",
            "[ -L .Build/Web/typo3conf/ext/cart_mpay24 ] || ln -snvf ../../../../. .Build/Web/typo3conf/ext/cart_mpay24"
        ]
    },
    "extra": {
        "typo3/cms": {
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "web-dir": ".Build/Web"
        }
    }
}